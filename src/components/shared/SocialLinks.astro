---
import { Icon } from "astro-icon/components";
const socialLinks = [
  {
    name: "Instagram",
    url: "https://instagram.com/luigidotdev",
    icon: "cib:instagram",
  },
  {
    name: "LinkedIn",
    url: "https://linkedin.com/in/luisurruela",
    icon: "cib:linkedin-in",
  },
  {
    name: "Gmail",
    url: "mailto:luis.urruela@gmail.com",
    icon: "cib:gmail",
  },
];
---

<div class="mt-4 md:mt-10 flex justify-center gap-3">
  {
    socialLinks.map((link) => (
      <a
        href={link.url}
        target="_blank"
        rel="noopener noreferrer"
        class="btn-swipe hover:text-white/50 text-black/50 w-[40px] h-[40px] rounded-full flex justify-center items-center transition-all duration-300 ease-in-out"
      >
        <Icon name={link.icon} size={24} />
      </a>
    ))
  }
</div>

<style>
  .btn-swipe {
    position: relative;
    overflow: hidden;
    z-index: 0;
  }

  .btn-swipe::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 0;
    transition: height 0.2s ease-in-out;
    z-index: -1;
  }

  .btn-swipe:hover::before {
    height: 100%;
  }

  .btn-swipe:nth-child(1)::before {
    background-color: #833ab4;
  }

  .btn-swipe:nth-child(2)::before {
    background-color: #0e76a8;
  }

  .btn-swipe:nth-child(3)::before {
    background-color: #c71610;
  }
</style>
